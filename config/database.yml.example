# This is an example file that should have been copied over to a real
# config/database.yml file by the installer script. Customizations
# should be done in that file, not this one.

default: &default
  adapter: postgresql
  pool: <%= ENV.fetch("RAILS_MAX_THREADS") { 5 } %>
  timeout: 5000

development:
  <<: *default
  database: macos_log_collector_development

# Warning: The database defined as "test" will be erased and
# re-generated from your development database when you run "rake".
# Do not set this db to the same as development or production.
test:
  <<: *default
  database: macos_log_collector_test

production:
  <<: *default
  database: macos_log_collector_production
